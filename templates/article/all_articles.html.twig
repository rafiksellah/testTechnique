{% extends 'base.html.twig' %}

{% block title %}All Articles{% endblock %}

{% block body %}
<style>
    .card {
        border: 1px solid #dee2e6;
        border-radius: 8px;
    }

    .card-title {
        color: #343a40;
        font-weight: bold;
    }
</style>
<div class="container mt-5">
    <h1 class="text-center mb-4">All Articles</h1>
    {% if articles is not empty %}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for article in articles %}
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <p class="card-text">
                        {{ article.content|slice(0, 100) ~ '...' }}
                    </p>
                    <p class="text-muted">
                        <small>By: {{ article.author.email }}</small><br>
                        <small>Published: {{ article.publishedAt|date('Y-m-d H:i') }}</small>
                    </p>
                </div>
                <div class="card-footer text-center">
                    {% if canEditArticles[article.id] %}
                    <a href="{{ path('article_detail', {id: article.id}) }}" class="btn btn-info btn-sm">View</a>
                    <a href="{{ path('edit_article', {id: article.id}) }}" class="btn btn-warning btn-sm">Edit</a>

                    <form method="post" action="{{ path('delete_article', { id: article.id }) }}"
                        style="display:inline;" onsubmit="return confirmDeletion();">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    {% else %}
                    <a href="{{ path('article_detail', {id: article.id}) }}" class="btn btn-info btn-sm">View</a>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <p class="text-center">No articles found.</p>
    {% endif %}
</div>
<script>
    function confirmDeletion() {
        return confirm("Are you sure you want to delete this article?");
    }
</script>
{% endblock %}