{% extends 'base.html.twig' %}

{% block title %}Create Article{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Create a New Article</h1>
    {{ form_start(form, {'attr': {'class': 'mb-3'}}) }}
    <div class="mb-3">
        {{ form_label(form.title, 'Title', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Enter the title'}}) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.content, 'Content', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'placeholder': 'Enter the content', 'rows': 5}})
        }}
    </div>
    <button type="submit" class="btn btn-success w-100">Create Article</button>
    {{ form_end(form) }}
</div>
{% endblock %}